<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- İnternet izni (özellikle reklamlar / ağ erişimi için gerekli) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network durumunu okumak bazı SDK'larda faydalı/istenebilir -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Kamerayı gerçekten kullanmıyorsan kaldırabilirsin -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:label="merge_blocks"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Google Mobile Ads App ID (TEST ID) -->
        <!-- Canlıya geçerken bunu kendi AdMob App ID'n ile değiştir -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">

            <!-- Flutter UI yüklenene kadar görünen tema -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Flutter embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Flutter text processing / package visibility -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
